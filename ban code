import {
  Client,
  GatewayIntentBits,
  SlashCommandBuilder,
  Routes,
  REST,
  EmbedBuilder,
  PermissionFlagsBits,
} from "discord.js";
import dotenv from "dotenv";
dotenv.config();

const client = new Client({
  intents: [GatewayIntentBits.Guilds],
});

const TOKEN = process.env.TOKEN;
const CLIENT_ID = process.env.CLIENT_ID;
const GUILD_ID = process.env.GUILD_ID;

// ===== ÄÄƒng kÃ½ slash command (theo guild) =====
const commands = [
  // Lá»‡nh ping
  new SlashCommandBuilder()
    .setName("ping")
    .setDescription("Kiá»ƒm tra Ä‘á»™ trá»… (ping) cá»§a bot"),

  // Lá»‡nh ban
  new SlashCommandBuilder()
    .setName("ban")
    .setDescription("Ban má»™t thÃ nh viÃªn khá»i server")
    .addUserOption((option) =>
      option.setName("user").setDescription("NgÆ°á»i cáº§n ban").setRequired(true)
    )
    .addStringOption((option) =>
      option.setName("reason").setDescription("LÃ½ do ban").setRequired(false)
    )
    .setDefaultMemberPermissions(PermissionFlagsBits.BanMembers), // yÃªu cáº§u quyá»n Ban Members
].map((cmd) => cmd.toJSON());

const rest = new REST({ version: "10" }).setToken(TOKEN);

(async () => {
  try {
    console.log("ğŸ” Äang Ä‘Äƒng kÃ½ lá»‡nh trong guild...");
    await rest.put(Routes.applicationGuildCommands(CLIENT_ID, GUILD_ID), {
      body: commands,
    });
    console.log("âœ… ÄÄƒng kÃ½ slash command thÃ nh cÃ´ng!");
  } catch (error) {
    console.error(error);
  }
})();

// ===== Khi bot online =====
client.once("ready", () => {
  console.log(`âœ… Bot Ä‘Ã£ Ä‘Äƒng nháº­p vá»›i tÃªn ${client.user.tag}!`);
});

// ===== Xá»­ lÃ½ lá»‡nh =====
client.on("interactionCreate", async (interaction) => {
  if (!interaction.isChatInputCommand()) return;

// ----------------- /ban -----------------
  if (interaction.commandName === "ban") {
    const user = interaction.options.getUser("user");
    const reason = interaction.options.getString("reason") || "KhÃ´ng cÃ³ lÃ½ do";
    const member = await interaction.guild.members.fetch(user.id).catch(() => null);

    // Kiá»ƒm tra náº¿u khÃ´ng tÃ¬m tháº¥y member
    if (!member) {
      return interaction.reply({
        content: "âŒ KhÃ´ng tÃ¬m tháº¥y ngÆ°á»i dÃ¹ng trong server!",
        ephemeral: true,
      });
    }

    // Kiá»ƒm tra bot cÃ³ thá»ƒ ban Ä‘Æ°á»£c khÃ´ng
    if (!member.bannable) {
      return interaction.reply({
        content: "âŒ Bot khÃ´ng thá»ƒ ban ngÆ°á»i nÃ y (role cá»§a há» cao hÆ¡n bot).",
        ephemeral: true,
      });
    }

    // Tiáº¿n hÃ nh ban
    await member.ban({ reason });

    const embed = new EmbedBuilder()
      .setColor("Red")
      .setTitle("ğŸ”¨ ÄÃ£ ban thÃ nh cÃ´ng!")
      .addFields(
        { name: "ğŸ‘¤ ThÃ nh viÃªn", value: `${user.tag}` },
        { name: "âœï¸ LÃ½ do", value: reason },
        { name: "ğŸ‘® Bá»Ÿi", value: interaction.user.tag }
      )
      .setTimestamp();

    return interaction.reply({ embeds: [embed] });
  }
});

client.login(TOKEN);
